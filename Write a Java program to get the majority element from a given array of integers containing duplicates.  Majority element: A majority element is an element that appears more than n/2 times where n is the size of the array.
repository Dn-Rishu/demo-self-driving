import java.util.*;
class Main {
    public static void main(String[] args) {
      Scanner sc=new Scanner(System.in);
      System.out.println("enter the size of array:");
      int n=sc.nextInt();
      int arr[]=new int[n];
      System.out.println("enter the element:");
      for(int i=0;i<n;i++){
          arr[i]=sc.nextInt();
      }
      System.out.println("A majority element that appears more than n/2 times is "+arr[n/2]);
    }
}
